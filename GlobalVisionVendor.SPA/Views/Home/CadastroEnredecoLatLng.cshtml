<div class="form-group" ng-controller="IndexApi">


    <div class="form-group">
        <label for="Digite o endereço para cadastro">Estado</label>
        @*<input type="text" ng-model="CadastroEndereco.Estado" class="form-control" id="email">*@
        
        <select ng-model="CadastroEndereco.Estado"  class="form-control" ng-options="est for est in Estado">           
        </select>
    
     </div>

    <div class="form-group">
        <label for="Digite o endereço para cadastro">Cidade</label>
       @* <input type="text" ng-model="CadastroEndereco.Cidade" class="form-control" id="email">*@
      
        <select ng-model="CadastroEndereco.Cidade" class="form-control" ng-options="cid for cid in Cidade"></select>
    
     </div>

    <div class="form-group">
        <label for="Digite o endereço para cadastro">Endereco</label>
        <input type="text" ng-model="CadastroEndereco.Endereco" class="form-control" id="email">
    </div>

    <div class="form-group">
        <label for="Digite o endereço para cadastro">Cep:</label>
        <input type="text" ng-model="CadastroEndereco.CEP" class="form-control" id="email">
    </div>

    <input type="text" hidden="hidden" ng-model="CadastroLatLng.Endereco" id="txtLatitude" name="txtLatitude" />
    <input type="text" hidden="hidden" ng-model="CadastroLatLng.Latitude" id="txtLatitude" name="txtLatitude" />
    <input type="text" hidden="hidden" ng-model="CadastroLatLng.Longitude" id="txtLongitude" name="txtLongitude" />

    <button type="submit" ng-click="Cadastro()" class="btn btn-success">Cadastrar...</button>
    <button type="submit" ng-click="CadastroLatLng()" class="btn btn-success">Cadastrar LatLng...</button>
    <br />
       
        <span class="row text-info">
            {{CadastroEndereco.Estado}},
            {{CadastroEndereco.Cidade}},
            {{CadastroEndereco.Endereco}},
            {{CadastroEndereco.CEP}}
        </span>
  
</div>

<div id="mapa" style="width:100%;height:200px;z-index:auto">
</div>

